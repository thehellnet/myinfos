<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/infos_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/infos_sim_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sim_iccid_label"
            style="@style/ui_infos_label"
            android:labelFor="@+id/sim_iccid_value"
            android:text="@string/ui_label_sim_iccid" />

        <EditText
            android:id="@+id/sim_iccid_value"
            style="@style/ui_infos_value"
            tools:ignore="Autofill" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/sim_country_label"
            style="@style/ui_infos_label"
            android:labelFor="@+id/sim_country_value"
            android:text="@string/ui_label_sim_country" />

        <EditText
            android:id="@+id/sim_country_value"
            style="@style/ui_infos_value"
            tools:ignore="Autofill" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/sim_operator_label"
            style="@style/ui_infos_label"
            android:labelFor="@+id/sim_operator_value"
            android:text="@string/ui_label_sim_operator" />

        <EditText
            android:id="@+id/sim_operator_value"
            style="@style/ui_infos_value"
            tools:ignore="Autofill" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/number_label"
            style="@style/ui_infos_label"
            android:labelFor="@+id/number_value"
            android:text="@string/ui_label_number" />

        <EditText
            android:id="@+id/number_value"
            style="@style/ui_infos_value"
            android:inputType="number"
            android:textIsSelectable="true"
            tools:ignore="Autofill" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/carrier_label"
            style="@style/ui_infos_label"
            android:labelFor="@+id/carrier_value"
            android:text="@string/ui_label_carrier" />

        <EditText
            android:id="@+id/carrier_value"
            style="@style/ui_infos_value"
            tools:ignore="Autofill" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/subscriber_label"
            style="@style/ui_infos_label"
            android:labelFor="@+id/subscriber_value"
            android:text="@string/ui_label_subscriber" />

        <EditText
            android:id="@+id/subscriber_value"
            style="@style/ui_infos_value"
            tools:ignore="Autofill" />
    </LinearLayout>

</ScrollView>
